<h1>Posts</h1>
<div class="container">
  <% @posts.each do |post| %>
      <div class="row row-margin-less">
        <div class="col-md-3">
        </div>
        <div class="main-page col-md-5 col-sm-12 col-xs-12">
          <table class="table">
            <tr>
              <td>
                <div class="main-page-title">
                  <hr>
                  <p><%= post.publish_age_less %></p>
                  <% if post.postable_type == "Article" %>
                      <h5><%= post.postable.headline %></h5>
                  <% elsif post.postable_type == "Video" %>
                      <h5><%= post.postable.name %></h5>
                  <% end %>
                </div>
              </td>
            </tr>
            <tr>
              <td>
                <%= image_tag post.thumbnail %>
              </td>
            </tr>
          </table>
        </div>
        <div class="col-md-4">
        </div>
      </div>
  <% end %>
</div>
<%= will_paginate @posts %>